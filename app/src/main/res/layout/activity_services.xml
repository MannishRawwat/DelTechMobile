<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ServicesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Services"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:paddingVertical="5dp"
            android:layout_marginLeft="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B0B0B0"></View>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:clickable="true"
            android:overScrollMode="never"
            android:id="@+id/services_recycler_view"></android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Services"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:paddingVertical="5dp"
                android:layout_marginLeft="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B0B0B0"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/day_background_state"
                android:clickable="true"
                android:onClick="PoliceClick"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:paddingVertical="3dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Police Control Room"
                android:layout_marginLeft="50dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="10sp"
                android:layout_marginLeft="60dp"
                />
            </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="25dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="1dp"
                android:background="#B0B0B0"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/day_background_state"
                android:clickable="true"
                android:onClick="FireClick"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:paddingVertical="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Fire Control Room"
                        android:layout_marginLeft="50dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="101"
                        android:textSize="10sp"
                        android:layout_marginLeft="60dp"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="25dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="1dp"
                android:background="#B0B0B0"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/day_background_state"
                android:clickable="true"
                android:onClick="AmbulanceClick"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:paddingVertical="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Ambulance Helpline"
                        android:layout_marginLeft="50dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="102"
                        android:textSize="10sp"
                        android:layout_marginLeft="60dp"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="25dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="1dp"
                android:background="#B0B0B0"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/day_background_state"
                android:clickable="true"
                android:onClick="WomenHelpClick"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:paddingVertical="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Women's Helpline"
                        android:layout_marginLeft="50dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1091"
                        android:textSize="10sp"
                        android:layout_marginLeft="60dp"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="25dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="1dp"
                android:background="#B0B0B0"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/day_background_state"
                android:clickable="true"
                android:onClick="StalkClick"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:paddingVertical="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mess_day_button"
                        android:gravity="center_vertical"
                        android:text="Anti-Stalking Cell"
                        android:layout_marginLeft="50dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1091"
                        android:textSize="10sp"
                        android:layout_marginLeft="60dp"
                        />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="25dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="1dp"
                android:background="#B0B0B0"></View>



        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>